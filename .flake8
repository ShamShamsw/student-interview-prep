[flake8]
max-line-length = 100
extend-ignore = E203

# Starter/scaffold exercise files intentionally contain unused imports and
# placeholder variable assignments that students will implement.
per-file-ignores =
    __init__.py: F401
    test_*.py: B011
    languages/python/beginner-projects/**/*.py: F401,F841
    languages/python/mini-projects/**/*.py: F401,F841
    languages/python/projects/**/starter/**/*.py: F401,F841
